# Database Configuration
# Copia tu DATABASE_URL desde Render Dashboard > PostgreSQL > Info > External Database URL
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Server Configuration
PORT=8000

# Security
JWT_SECRET=cambiar_por_secreto_super_seguro_123456

# AI API Keys
# Obtén tu Gemini API key desde: https://aistudio.google.com/
GEMINI_API_KEY=tu_gemini_api_key_aqui

# Obtén tu Claude API key desde: https://console.anthropic.com/
CLAUDE_API_KEY=tu_claude_api_key_aqui

# Opcional: OpenAI API key desde: https://platform.openai.com/
OPENAI_API_KEY=tu_openai_api_key_aqui

# Frontend URL (actualizar después de desplegar)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=50000000
UPLOAD_DIR=./uploads
